        }

    .angles-outer {
        position: absolute;
        height: 40px;
        width: 100%;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
    }

    .angles-inner {
        position: relative;
        display: block;
        height: 100%;
        width: 100%;
    }

        .angles-inner > .angle-green {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            left: 0;
            height: 120%;
            width: 120%;
            background-color: rgba(160, 236, 202, 0.5);
        }

        .angles-inner > .angle-orange {
            position: absolute;
            right: -70%;
            bottom: -10px;
            background-color: rgb(240, 155, 112);
            height: 120%;
            width: 150%;
            -ms-transform: rotate(-3deg);
            -webkit-transform: rotate(-3deg);
            transform: rotate(-3deg);
        }

    @@media (max-width: 767px) {
        .angles-inner > .angle-orange {
