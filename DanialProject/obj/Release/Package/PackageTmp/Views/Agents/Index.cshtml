@model IEnumerable<DanialProject.Models.Database.Agents>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CompleteLayout.cshtml";
}
<head>
    <title></title> 
    <link href="~/Content/css/dataTables.css" rel="stylesheet" />   
    <!-- DataTables -->
    <script src="@DanialProject.Models.FingerPoint.Tag("/Content/AdminPage/bower_components/datatables.net/js/jquery.dataTables.js")"></script>
    <script src="@DanialProject.Models.FingerPoint.Tag("/Content/AdminPage/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js")"></script>
    <style>
        div.dataTables_wrapper div.dataTables_length select {
            height: 37px !important;
            padding: 0.375rem 0.75rem !important;
        }

        .form-inline label {
            display: inline-block !important;
        }

        .row {
            width: 100% !important;
            margin: 0 !important;
        }

        div.dataTables_wrapper div.dataTables_paginate ul.pagination a {
            margin-left: 5px;
        }

        div.dataTables_wrapper div.dataTables_paginate {
            float: right !important;
            margin: 10px 0px 10px 10px !important;
        }
    </style>

    <script>
        $(document).ready(function () {
            $('html, body').animate({ scrollTop: 0 }, 'fast');
            $("#preloader").hide();

            $('#home-bg').addClass('bg-no-image');
            $('#navbar').addClass('navbar-color');

            $('#example').DataTable();
        });
    </script>

</head>
</div>
<div class="container m-t-100">
    <section class="content">
        <div class="row"> 
            <div class="container">
                <div class="col">
                    <h1 class="box-title" style="font-weight:bold; font-size:24px; padding-bottom:5px;">List</h1>
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                </div>
                <table id="example" class="table table-striped table-hover table-bordered dataTable no-footer table-responsive" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Picture
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailField)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Position)
                            </th>
                            <th>Additional_Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src='@Html.DisplayFor(modelItem => item.Path)' class='img-circle' style='width:60px !important; height:60px !important; margin-left:25px;'>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmailField)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Position)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "AgentsDetails", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "AgentsDelete", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>
                                Picture
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailField)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Position)
                            </th>
                            <th>Additional_Options</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </section>
</div>
