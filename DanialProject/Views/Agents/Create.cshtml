                                                @Html.EditorFor(model => model.Instagram, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Instagram, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Twitter, htmlAttributes: new { @class = "control-label col" })
                                            <div class="col">
                                                @Html.EditorFor(model => model.Twitter, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Twitter, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Facebook, htmlAttributes: new { @class = "control-label col" })
                                            <div class="col">
                                                @Html.EditorFor(model => model.Facebook, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Facebook, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col" })
                                            <div class="col"> 
                                                <textarea  class="form-control" name="Description" rows="10" cols="30" style="width:100%; padding:10px;"></textarea>
                                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col">
                                                <input type="submit" value="Create" style="background-color:#838D96 !important;" class="btn btn-success" />
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="col">
                                    @Html.ActionLink("Back to List", "Index")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

