@model IEnumerable<DanialProject.Models.Database.Features>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('html, body').animate({ scrollTop: 0 }, 'fast');
        $("#preloader").hide();
        $('#example').DataTable();
    });
</script>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box scriptbox-default">
                <div class="box-header">
                    <div>
                        <h1 class="box-title col-md-3" style="font-weight:bold; font-size:24px; padding-bottom:5px;">List</h1>
                    </div>
                </div>
                <div class="box-body">
                    <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                        <div class="box box-primary">
                            <div class="box-body">
                                <div class="container" style="overflow-x:auto; width:100% !important;">
                                    <p>
                                        @Html.ActionLink("Create New", "Create")
                                    </p>
                                    <table id="example" class="table table-striped table-hover table-bordered dataTable no-footer" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Icon)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ListingType)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.IconType)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td>
                                                    <img src='@Html.DisplayFor(modelItem => item.Icon)' class='img-circle' style='width:60px !important; height:60px !important; margin-left:25px;'>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ListingType)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IconType)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                                </td>
                                            </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Icon)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ListingType)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.IconType)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
