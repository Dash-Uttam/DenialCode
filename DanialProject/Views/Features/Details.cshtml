@model DanialProject.Models.Database.Features

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('html, body').animate({ scrollTop: 0 }, 'fast');
        $("#preloader").hide();
    });
</script>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box scriptbox-default">
                <div class="box-header">
                    <div>
                        <h1 class="box-title col-md-3" style="font-weight:bold; font-size:24px; padding-bottom:5px;">Details</h1>
                    </div>
                </div>
                <div class="box-body">
                    <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                        <div class="box box-primary">
                            <div class="box-body">
                                <div class="container" style="overflow-x:auto; width:100% !important;">
                                    <div>
                                        <h4>Features</h4>
                                        <hr />
                                        <dl class="dl-horizontal">
                                            <dt>
                                                Icon
                                            </dt>

                                            <dd>
                                                <img src='@Html.DisplayFor(model => model.Icon)' class='img-circle' style='width:60px !important; height:60px !important; margin-left:25px;'>
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Name)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.ListingType)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.ListingType)
                                            </dd>

                                            <dt>
                                                @Html.DisplayNameFor(model => model.IconType)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.IconType)
                                            </dd>

                                        </dl>
                                    </div>
                                    <p>
                                        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
                                        @Html.ActionLink("Back to List", "Index")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>